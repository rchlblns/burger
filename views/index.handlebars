<div class="container">
	{{!-- Burger Listings --}}
	<div class="row">
		{{!-- Burgers To Eat --}}
		<div class="col-sm-6 p-3">
			<h2 class="text-center">Ready To Eat</h2>
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
				<form action="/burgers/update{{id}}" method="POST">
					<div class="input-group">
						<li class="form-control">
							{{this.id}}. {{this.burger_name}}
						</li>
						<span class="input-group-btn">
							<button class="btn btn-success devour-button" type="submit">Devour it!</button>
						</span>
					</div>
				</form>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		{{!-- Eaten Burgers --}}
		<div class="col-sm-6 p-3">
			<h2 class="text-center">Already Eaten</h2>
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
				<form action="/burgers/delete{{id}}" method="POST">
					<div class="input-group">
						<li class="form-control">
							{{this.id}}. {{this.burger_name}}
						</li>
						<span class="input-group-btn">
							<button class="btn btn-danger trash-button" type="button">Trash it!</button>
						</span>
					</div>
				</form>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

	<br><br>

	{{!-- Form for adding new burger --}}
	<div class="row text-center">
		<div class="col-sm-4 mx-auto">
			<h2>Order A New Burger</h2>
			<form action="/burgers/create" method="POST">
				<div class="form-group">
					<input class="form-control text-center" id="new_Burger" name="burger_name" placeholder="Type in a burger here!">
					<br>
					{{!-- Submit button --}}
					<button type="submit" class="btn btn-outline-dark" id="newBurgerSubmit">Place Your Order</button>
				</div>
			</form>
		</div>
	</div>
</div>